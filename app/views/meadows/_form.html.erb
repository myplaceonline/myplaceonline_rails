<%=
  render partial: "myplaceonline/select_or_create", locals: {
    f: f,
    name: :trek,
    existingobj: obj.trek,
    heading: t("myplaceonline.meadows.trek"),
    objform: "treks/form",
    existingobjurl: "trek_path",
    searchurl: "/treks.json?perpage=0",
    edit: edit,
    autofocus: false,
    expanded_if_nil: true,
  }
%>
<%= myp_select(f, :rating, "myplaceonline.meadows.rating", Myp.translate_options(Myp::RATINGS), obj.rating) %>
<%= myp_check_box(f, :visited, "myplaceonline.meadows.visited") %>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_TEXT_AREA,
    name: :notes,
    value: obj.notes,
    placeholder: "myplaceonline.general.notes",
    collapsed: obj.notes.blank?,
    placeholder_prefix: Myp.instance_to_category_human_readable(obj).singularize,
  )
%>
