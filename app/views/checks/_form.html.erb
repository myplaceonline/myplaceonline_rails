<%=
  render partial: "myplaceonline/select_or_create", locals: {
    f: f,
    name: :bank_account,
    existingobj: obj.bank_account,
    heading: t("myplaceonline.checks.bank_account"),
    objform: "bank_accounts/form",
    existingobjurl: "bank_account_path",
    searchurl: "/bank_accounts.json?perpage=0",
    edit: edit,
    autofocus: false
  }
%>
<%=
  render partial: "myplaceonline/pictures_form", locals: {
    f: f,
    obj: obj,
    position_field: :position,
