<%=
  input_field(
    form: f,
    type: Myp::FIELD_TEXT,
    name: :description,
    value: obj.description,
    placeholder: "myplaceonline.checks.description",
    autofocus: autofocus
  )
%>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_DECIMAL,
    name: :amount,
    value: obj.amount,
    placeholder: "myplaceonline.checks.amount"
  )
%>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_DATE,
    name: :received_date,
    value: obj.received_date,
    placeholder: "myplaceonline.checks.received_date"
  )
%>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_DATE,
    name: :deposit_date,
    value: obj.deposit_date,
    placeholder: "myplaceonline.checks.deposit_date"
  )
%>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_TEXT_AREA,
    name: :notes,
    value: obj.notes,
    placeholder: "myplaceonline.general.notes",
    collapsed: obj.notes.blank?,
    placeholder_prefix: Myp.instance_to_category_human_readable(obj).singularize,
  )
%>
<%=
  render partial: "myplaceonline/select_or_create", locals: {
    f: f,
    name: :contact,
    existingobj: obj.contact,
    heading: t("myplaceonline.checks.contact"),
    objform: "contacts/form",
    existingobjurl: "contact_path",
    searchurl: "/contacts.json?perpage=0",
    edit: edit,
    autofocus: false
  }
%>
<%=
  render partial: "myplaceonline/select_or_create", locals: {
    f: f,
