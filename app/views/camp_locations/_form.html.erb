<%=
  render partial: "myplaceonline/select_or_create", locals: {
    f: f,
    name: :location,
    existingobj: obj.location,
    heading: t("myplaceonline.camp_locations.location"),
    objform: "locations/form",
    existingobjurl: "location_path",
    searchurl: "/locations.json?perpage=0",
    edit: edit,
    autofocus: true,
    expanded_if_nil: true
  }
%>
<%= myp_check_box(f, :overnight_allowed, "myplaceonline.camp_locations.overnight_allowed") %>
<%= myp_check_box(f, :free, "myplaceonline.camp_locations.free") %>
<%= myp_check_box(f, :bathroom, "myplaceonline.camp_locations.bathroom") %>
<%= myp_check_box(f, :vehicle_parking, "myplaceonline.camp_locations.vehicle_parking") %>
<%= myp_check_box(f, :cell_phone_reception, "myplaceonline.camp_locations.cell_phone_reception") %>
<%= myp_check_box(f, :cell_phone_data, "myplaceonline.camp_locations.cell_phone_data") %>
<%= myp_check_box(f, :fresh_water, "myplaceonline.camp_locations.fresh_water") %>
<%= myp_check_box(f, :electricity, "myplaceonline.camp_locations.electricity") %>
<%= myp_check_box(f, :sewage, "myplaceonline.camp_locations.sewage") %>
<%= myp_check_box(f, :shower, "myplaceonline.camp_locations.shower") %>
<%= myp_check_box(f, :internet, "myplaceonline.camp_locations.internet") %>
<%= myp_check_box(f, :trash, "myplaceonline.camp_locations.trash") %>
<%= myp_check_box(f, :boondocking, "myplaceonline.camp_locations.boondocking") %>
<%= myp_check_box(f, :chance_high_wind, "myplaceonline.camp_locations.chance_high_wind") %>
<%= myp_check_box(f, :birds_chirping, "myplaceonline.camp_locations.birds_chirping") %>
<%= myp_check_box(f, :near_busy_road, "myplaceonline.camp_locations.near_busy_road") %>
<%= myp_check_box(f, :level_ground, "myplaceonline.camp_locations.level_ground") %>
<%= myp_check_box(f, :slideout_okay, "myplaceonline.camp_locations.slideout_okay") %>
<%= myp_check_box(f, :limited_time_parking, "myplaceonline.camp_locations.limited_time_parking") %>
<%= myp_check_box(f, :unlimited_time_parking, "myplaceonline.camp_locations.unlimited_time_parking") %>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_DECIMAL,
    name: :maxhours,
    value: obj.maxhours,
    placeholder: "myplaceonline.camp_locations.maxhours"
  )
%>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_DECIMAL,
    name: :nightly_cost,
    value: obj.nightly_cost,
    placeholder: "myplaceonline.camp_locations.nightly_cost"
  )
%>
<%= myp_select(f, :rating, "myplaceonline.camp_locations.rating", Myp.translate_options(Myp::RATINGS), obj.rating) %>
<%= myp_select(f, :noise_level, "myplaceonline.camp_locations.noise_level", Myp.translate_options(Myp::NOISE_LEVELS), obj.noise_level) %>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_TEXT_AREA,
    name: :notes,
    value: obj.notes,
    placeholder: "myplaceonline.general.notes",
    collapsed: obj.notes.blank?,
    placeholder_prefix: Myp.instance_to_category_human_readable(obj).singularize,
  )
%>
<%=
  render partial: "myplaceonline/select_or_create", locals: {
    f: f,
    name: :membership,
    existingobj: obj.membership,
    heading: t("myplaceonline.camp_locations.membership"),
    objform: "memberships/form",
    existingobjurl: "membership_path",
    searchurl: "/memberships.json?perpage=0",
    edit: edit,
    autofocus: false
  }
%>
