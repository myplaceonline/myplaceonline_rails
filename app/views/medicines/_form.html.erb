<%= myp_text_field(f, :medicine_name, "myplaceonline.medicines.medicine_name", obj.medicine_name, autofocus) %>
<%= myp_select(f, :dosage_type, "myplaceonline.medicines.dosage_type", Myp.translate_options(Myp::DOSAGES), obj.dosage_type) %>
<%= myp_decimal_field(f, :dosage, "myplaceonline.medicines.dosage", obj.dosage) %>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_TEXT_AREA,
    name: :notes,
    value: obj.notes,
    placeholder: "myplaceonline.general.notes",
    collapsed: obj.notes.blank?,
    placeholder_prefix: Myp.instance_to_category_human_readable(obj).singularize,
  )
%>
