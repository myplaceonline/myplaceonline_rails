<%=
  input_field(
    form: f,
    type: Myp::FIELD_TEXT,
    name: :blog_post_title,
    value: obj.blog_post_title,
    placeholder: "myplaceonline.blog_posts.blog_post_title",
    autofocus: autofocus
  )
%>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_TEXT_AREA,
    name: :post,
    value: obj.post,
    placeholder: "myplaceonline.blog_posts.post",
    collapsed: false,
    text_area_rich: obj.edit_type == BlogPost::EDIT_TYPE_TEXT ? false : true,
  )
%>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_DATETIME,
    name: :post_date,
    value: obj.post_date,
    placeholder: "myplaceonline.blog_posts.post_date"
  )
%>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_BOOLEAN,
    name: :requireslogin,
    value: obj.requireslogin,
    placeholder: "myplaceonline.blog_posts.requireslogin"
  )
%>
