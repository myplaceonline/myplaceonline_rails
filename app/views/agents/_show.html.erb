<%
if !defined?(fullshow)
  fullshow = Myp.param_bool(params, :fullshow) || !Myp.praise_or_shame?
end
%>

<% if fullshow %>
  <%= data_row(heading: t("myplaceonline.contacts.name"), content: obj.agent_identity.name) %>
  <%= data_row(heading: t("myplaceonline.contacts.middle_name"), content: obj.agent_identity.middle_name) %>
  <%= data_row(heading: t("myplaceonline.contacts.last_name"), content: obj.agent_identity.last_name) %>
  <%= data_row(heading: t("myplaceonline.contacts.nickname"), content: obj.agent_identity.nickname) %>
  <%= data_row(heading: t("myplaceonline.contacts.birthday"), content: obj.agent_identity.birthday) %>
  <%= data_row(heading: t("myplaceonline.identities.email"), content: obj.agent_identity.identity_emails) %>
  <%= data_row(heading: t("myplaceonline.identities.phone"), content: obj.agent_identity.identity_phones) %>
  <%= data_row(heading: t("myplaceonline.general.notes"), content: obj.agent_identity.notes, markdown: true) %>
  <%= data_row(heading: t("myplaceonline.identities.location"), content: obj.agent_identity.identity_locations, max_nest: 2) %>
  <%= data_row(heading: t("myplaceonline.contacts.company"), content: obj.agent_identity.company, max_nest: 2, reference_display_heading: false) %>
  <%= data_row(heading: t("myplaceonline.contacts.picture"), content: obj.agent_identity.identity_pictures) %>
  <% obj.agent_identity.identity_clothes.each do |clothes| %>
    <%= data_row(heading: t("myplaceonline.identity_clothes.when_date"), content: clothes.when_date) %>
    <%= data_row(heading: t("myplaceonline.identity_clothes.clothes"), content: clothes.clothes, markdown: true) %>
  <% end %>
<% end %>
