<%= myp_text_field(f, :short_description, "myplaceonline.to_dos.short_description", obj.short_description, autofocus, remote_autocomplete_model: obj.class, remote_autocomplete_all: false) %>
<%= myp_datetime_field(f, :due_time, "myplaceonline.to_dos.due_time", obj.due_time) %>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_TEXT_AREA,
    name: :notes,
    value: obj.notes,
    placeholder: "myplaceonline.general.notes",
    collapsed: obj.notes.blank?,
    placeholder_prefix: Myp.instance_to_category_human_readable(obj).singularize,
  )
%>
