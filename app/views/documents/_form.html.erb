<%= myp_text_field(f, :document_name, "myplaceonline.documents.document_name", obj.document_name, autofocus) %>
<%= myp_date_field(f, :document_date, "myplaceonline.documents.document_date", obj.document_date) %>
<%= myp_text_field(f, :document_category, "myplaceonline.documents.document_category", obj.document_category, remote_autocomplete_model: obj.class, remote_autocomplete_all: true) %>
<%= myp_check_box(f, :important, "myplaceonline.documents.important") %>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_TEXT_AREA,
    name: :notes,
    value: obj.notes,
    placeholder: "myplaceonline.general.notes",
    collapsed: obj.notes.blank?,
    placeholder_prefix: Myp.instance_to_category_human_readable(obj).singularize,
  )
%>
<%=
  render partial: "myplaceonline/pictures_form", locals: {
    f: f,
    obj: obj,
    position_field: :position,
    pictures_field: :document_files,
    item_placeholder: "myplaceonline.documents.file",
    heading: "myplaceonline.documents.files",
    addbutton: "myplaceonline.documents.add_file",
    addbutton_multi: "myplaceonline.documents.add_files",
    deletebutton: "myplaceonline.documents.delete_file",
    expanded: true
  }
%>
