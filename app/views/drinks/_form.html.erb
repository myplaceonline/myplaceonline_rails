<%= myp_text_field(f, :drink_name, "myplaceonline.drinks.drink_name", obj.drink_name, autofocus) %>
<%= myp_decimal_field(f, :price, "myplaceonline.drinks.price", obj.price) %>
<%= myp_decimal_field(f, :calories, "myplaceonline.drinks.calories", obj.calories) %>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_TEXT_AREA,
    name: :notes,
    value: obj.notes,
    placeholder: "myplaceonline.general.notes",
    collapsed: obj.notes.blank?,
    placeholder_prefix: Myp.instance_to_category_human_readable(obj).singularize,
  )
%>
