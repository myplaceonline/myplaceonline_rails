<%=
  render partial: "myplaceonline/select_or_create", locals: {
    f: f,
    name: :location,
    existingobj: obj.location,
    heading: t("myplaceonline.restaurants.location"),
    objform: "locations/form",
    existingobjurl: "location_path",
    searchurl: "/locations.json?perpage=0",
    edit: edit,
    autofocus: true,
    expanded_if_nil: true
  }
%>
<%= myp_select(f, :rating, "myplaceonline.restaurants.rating", Myp.translate_options(Myp::RATINGS), obj.rating) %>
<%= myp_check_box(f, :visited, "myplaceonline.restaurants.visited") %>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_BOOLEAN,
    name: :ethical_meat,
    value: obj.ethical_meat,
    placeholder: "myplaceonline.restaurants.ethical_meat"
  )
%>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_BOOLEAN,
    name: :rooftop,
    value: obj.rooftop,
    placeholder: "myplaceonline.restaurants.rooftop"
  )
%>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_TEXT_AREA,
    name: :notes,
    value: obj.notes,
    placeholder: "myplaceonline.general.notes",
    collapsed: obj.notes.blank?,
    placeholder_prefix: Myp.instance_to_category_human_readable(obj).singularize,
  )
%>
<%=
  render partial: "myplaceonline/pictures_form", locals: {
    f: f,
    obj: obj,
    pictures_field: :restaurant_pictures
  }
%>
