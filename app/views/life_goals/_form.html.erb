<%= myp_text_field(f, :life_goal_name, "myplaceonline.life_goals.life_goal_name", obj.life_goal_name, autofocus) %>
<%= myp_date_field(f, :goal_started, "myplaceonline.life_goals.goal_started", obj.goal_started) %>
<%= myp_date_field(f, :goal_ended, "myplaceonline.life_goals.goal_ended", obj.goal_ended) %>
<%= myp_check_box(f, :long_term, "myplaceonline.life_goals.long_term") %>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_TEXT_AREA,
    name: :notes,
    value: obj.notes,
    placeholder: "myplaceonline.general.notes",
    collapsed: obj.notes.blank?,
    placeholder_prefix: Myp.instance_to_category_human_readable(obj).singularize,
  )
%>
