<%=
  render partial: "myplaceonline/select_or_create", locals: {
    f: f,
    name: :location,
    existingobj: obj.location,
    heading: t("myplaceonline.hotels.location"),
    objform: "locations/form",
    existingobjurl: "location_path",
    searchurl: "/locations.json?perpage=0",
    edit: edit,
    autofocus: autofocus,
    expanded_if_nil: true
  }
%>
<%= myp_number_field(f, :room_number, "myplaceonline.hotels.room_number", obj.room_number) %>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_DATE,
    name: :checkin_date,
    value: obj.checkin_date,
    placeholder: "myplaceonline.hotels.checkin_date"
  )
%>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_DATE,
    name: :checkout_date,
    value: obj.checkout_date,
    placeholder: "myplaceonline.hotels.checkout_date"
  )
%>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_TEXT,
    name: :confirmation_number,
    value: obj.confirmation_number,
    placeholder: "myplaceonline.hotels.confirmation_number"
  )
%>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_DECIMAL,
    name: :total_cost,
    value: obj.total_cost,
    placeholder: "myplaceonline.hotels.total_cost"
  )
%>
<%= myp_select(f, :overall_rating, "myplaceonline.hotels.overall_rating", Myp.translate_options(Myp::RATINGS), obj.overall_rating) %>
<%= myp_select(f, :breakfast_rating, "myplaceonline.hotels.breakfast_rating", Myp.translate_options(Myp::RATINGS), obj.breakfast_rating) %>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_SELECT,
    name: :rating,
    value: obj.rating,
    placeholder: "myplaceonline.general.rating",
    select_options: Myp::RATINGS,
  )
%>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_TEXT_AREA,
    name: :notes,
    value: obj.notes,
    placeholder: "myplaceonline.general.notes",
    collapsed: obj.notes.blank?,
    placeholder_prefix: Myp.instance_to_category_human_readable(obj).singularize,
  )
%>
