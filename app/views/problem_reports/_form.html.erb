<%= myp_text_field(f, :report_name, "myplaceonline.problem_reports.report_name", obj.report_name, autofocus) %>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_TEXT_AREA,
    name: :notes,
    value: obj.notes,
    placeholder: "myplaceonline.general.notes",
    collapsed: obj.notes.blank?,
    placeholder_prefix: Myp.instance_to_category_human_readable(obj).singularize,
  )
%>
<%=
  render partial: "myplaceonline/pictures_form", locals: {
    f: f,
    obj: obj,
    position_field: :position,
    pictures_field: :problem_report_files,
    item_placeholder: "myplaceonline.problem_reports.file",
    heading: "myplaceonline.problem_reports.files",
    addbutton: "myplaceonline.problem_reports.add_file",
    addbutton_multi: "myplaceonline.problem_reports.add_files",
    deletebutton: "myplaceonline.problem_reports.delete_file"
  }
%>
