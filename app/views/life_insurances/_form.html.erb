<%= myp_text_field(f, :insurance_name, "myplaceonline.life_insurances.insurance_name", obj.insurance_name, autofocus) %>
<%= myp_decimal_field(f, :insurance_amount, "myplaceonline.life_insurances.insurance_amount", obj.insurance_amount) %>
<%= myp_date_field(f, :started, "myplaceonline.life_insurances.started", obj.started) %>
<%= myp_select(f, :life_insurance_type, "myplaceonline.life_insurances.life_insurance_type", Myp.translate_options(LifeInsurance::LIFE_INSURANCE_TYPES), obj.life_insurance_type) %>
<%= myp_decimal_field(f, :loan_interest_rate, "myplaceonline.life_insurances.loan_interest_rate", obj.loan_interest_rate) %>
<%= myp_decimal_field(f, :cash_value, "myplaceonline.life_insurances.cash_value", obj.cash_value) %>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_TEXT_AREA,
    name: :notes,
    value: obj.notes,
    placeholder: "myplaceonline.general.notes",
    collapsed: obj.notes.blank?,
    placeholder_prefix: Myp.instance_to_category_human_readable(obj).singularize,
  )
%>
<%=
  render partial: "myplaceonline/select_or_create", locals: {
    f: f,
    name: :company,
    existingobj: obj.company,
    heading: t("myplaceonline.life_insurances.company"),
    objform: "companies/form",
    existingobjurl: "company_path",
    searchurl: "/companies.json?perpage=0",
    edit: edit,
    autofocus: false
  }
%>
<%=
  render partial: "myplaceonline/select_or_create", locals: {
    f: f,
    name: :periodic_payment,
    existingobj: obj.periodic_payment,
    heading: t("myplaceonline.life_insurances.periodic_payment"),
    objform: "periodic_payments/form",
    existingobjurl: "periodic_payment_path",
    searchurl: "/periodic_payments.json?perpage=0",
    edit: edit,
    autofocus: false
  }
%>
<%=
  render partial: "myplaceonline/select_or_create", locals: {
    f: f,
    name: :beneficiary,
    existingobj: obj.beneficiary,
    heading: t("myplaceonline.life_insurances.beneficiary"),
    objform: "contacts/form",
    existingobjurl: "contact_path",
    searchurl: "/contacts.json?perpage=0",
    edit: edit,
    autofocus: false
  }
%>
<%=
  render partial: "myplaceonline/pictures_form", locals: {
    f: f,
    obj: obj,
    position_field: :position,
    pictures_field: :life_insurance_files,
    item_placeholder: "myplaceonline.identity_files.file",
    heading: "myplaceonline.identity_files.files",
    addbutton: "myplaceonline.identity_files.add_file",
    addbutton_multi: "myplaceonline.identity_files.add_files",
    deletebutton: "myplaceonline.identity_files.delete_file"
  }
%>
