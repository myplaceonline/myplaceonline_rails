<%=
  render partial: "myplaceonline/select_or_create", locals: {
    f: f,
    name: :location,
    existingobj: obj.location,
    heading: t("myplaceonline.desired_locations.location"),
    objform: "locations/form",
    existingobjurl: "location_path",
    searchurl: "/locations.json?perpage=0",
    edit: edit,
    autofocus: true,
    expanded_if_nil: true
  }
%>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_TEXT_AREA,
    name: :notes,
    value: obj.notes,
    placeholder: "myplaceonline.desired_locations.notes",
    collapsed: false,
  )
%>
<%=
  render partial: "myplaceonline/select_or_create", locals: {
    f: f,
    name: :website,
    existingobj: obj.website,
    heading: t("myplaceonline.locations.website"),
    objform: "websites/form",
    existingobjurl: "website_path",
    searchurl: "/websites.json?perpage=0",
    edit: edit,
    autofocus: false
  }
%>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_SELECT,
    name: :rating,
    value: obj.rating,
    placeholder: "myplaceonline.general.rating",
    select_options: Myp::RATINGS,
  )
%>
