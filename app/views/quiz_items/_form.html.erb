<%=
  input_field(
    form: f,
    type: Myp::FIELD_TEXT_AREA,
    name: :quiz_question,
    value: obj.quiz_question,
    placeholder: "myplaceonline.quiz_items.quiz_question",
    collapsed: false,
    autofocus: autofocus,
  )
%>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_TEXT_AREA,
    name: :quiz_answer,
    value: obj.quiz_answer,
    placeholder: "myplaceonline.quiz_items.quiz_answer",
    collapsed: false,
  )
%>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_TEXT,
    name: :link,
    value: obj.link,
    placeholder: "myplaceonline.quiz_items.link",
  )
%>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_TEXT_AREA,
    name: :notes,
    value: obj.notes,
    placeholder: "myplaceonline.general.notes",
    collapsed: obj.notes.blank?,
    placeholder_prefix: I18n.t("myplaceonline.category.quiz_items").singularize,
  )
%>
<%=
  render partial: "myplaceonline/pictures_form", locals: {
    f: f,
    obj: obj,
    position_field: :position,
    pictures_field: :quiz_item_files,
    item_placeholder: "myplaceonline.identity_files.file",
    heading: "myplaceonline.identity_files.files",
    addbutton: "myplaceonline.identity_files.add_file",
    addbutton_multi: "myplaceonline.identity_files.add_files",
    deletebutton: "myplaceonline.identity_files.delete_file"
  }
%>
<% if !@parent.nil? && !@parent.choices.blank? %>
  <%=
    input_field(
      form: f,
      type: Myp::FIELD_RADIO,
      name: :correct_choice,
      value: obj.correct_choice,
      placeholder: "myplaceonline.quiz_items.correct_choice",
      radio_options: @parent.available_choices,
      translate_radio_options: false,
    )
  %>
<% end %>
