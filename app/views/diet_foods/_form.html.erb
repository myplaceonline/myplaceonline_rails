<%=
  render partial: "myplaceonline/select_or_create", locals: {
    f: f,
    name: :food,
    existingobj: obj.food,
    heading: t("myplaceonline.diet_foods.food"),
    objform: "foods/form",
    existingobjurl: "food_path",
    searchurl: "/foods.json?perpage=0",
    edit: edit,
    autofocus: autofocus,
    expanded_if_nil: true
  }
%>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_DECIMAL,
    name: :quantity,
    value: obj.quantity,
    placeholder: "myplaceonline.diet_foods.quantity"
  )
%>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_SELECT,
    name: :food_type,
    value: obj.food_type,
    placeholder: "myplaceonline.diet_foods.food_type",
    select_options: DietFood::FOOD_TYPES,
  )
%>
<%=
  render partial: "myplaceonline/select_or_create", locals: {
    f: f,
    name: :reminder,
    existingobj: obj.reminder,
    heading: t("myplaceonline.diet_foods.reminder"),
    objform: "reminders/form",
    existingobjurl: "reminder_path",
    searchurl: "/reminders.json?perpage=0",
    edit: edit,
    autofocus: false
  }
%>
