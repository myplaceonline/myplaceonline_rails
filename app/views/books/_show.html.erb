<%= attribute_table_row(t("myplaceonline.books.book_name"), obj.book_name) %>
<%= attribute_table_row(t("myplaceonline.books.author"), obj.author) %>
<%= attribute_table_row(t("myplaceonline.books.isbn"), obj.isbn) %>
<%= attribute_table_row(t("myplaceonline.books.book_category"), obj.book_category) %>
<%= attribute_table_row_boolean(t("myplaceonline.books.is_owned"), !obj.when_owned.nil?) %>
<%= attribute_table_row_boolean(t("myplaceonline.books.is_read"), !obj.when_read.nil?) %>
<%= attribute_table_row_date(t("myplaceonline.books.when_read"), obj.when_read) %>
<%= attribute_table_row_date(t("myplaceonline.books.acquired"), obj.acquired) %>
<%= attribute_table_row_boolean(t("myplaceonline.books.is_discarded"), !obj.when_discarded.nil?) %>
<%= attribute_table_row(t("myplaceonline.books.book_location"), obj.book_location) %>
<%= attribute_table_row_markdown(t("myplaceonline.books.notes"), obj.notes) %>
<%= attribute_table_row_markdown(t("myplaceonline.books.review"), obj.review) %>
<%= attribute_table_row_reference(t("myplaceonline.books.recommender"), "contact_path", obj.recommender) %>
<%= attribute_table_row_reference(t("myplaceonline.books.lent_to"), "contact_path", obj.lent_to) %>
<%= attribute_table_row_date(t("myplaceonline.books.lent_date"), obj.lent_date) %>
<%= attribute_table_row_reference(t("myplaceonline.books.borrowed_from"), "contact_path", obj.borrowed_from) %>
<%= attribute_table_row_date(t("myplaceonline.books.borrowed_date"), obj.borrowed_date) %>
<% obj.book_quotes.each do |x| %>
  <%= table_row_heading(t("myplaceonline.books.book_quote")) %>
  <%= render partial: "quotes/show", locals: { obj: x.quote } %>
  <%= attribute_table_row(t("myplaceonline.book_quotes.pages"), x.pages) %>
<% end %>
<%= attribute_table_row_reference(t("myplaceonline.books.gift_from"), "contact_path", obj.gift_from) %>
<%=
  render partial: "myplaceonline/pictures", locals: {
    pics: obj.book_files,
    placeholder: "myplaceonline.books.file"
  }
%>
