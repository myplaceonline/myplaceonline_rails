<% content_for :heading do -%><%= t("myplaceonline.financial_assets.totals") %><% end -%>

<h1><%= t("myplaceonline.financial_assets.totals") %></h1>

<%= flashes! %>

<%= data_row(heading: t("myplaceonline.financial_assets.totals"), prefix_heading: true, content: @total, wrap: false) %>

<% if @breakdown.count > 0 %>
  <hr />
  <ul>
  <% @breakdown.each do |key, value| %>
    <li>
      <%= key %><br />
      <ul>
        <% value.each do |asset| %>
          <li><%= asset.asset_name %> = <%= asset.asset_value %></li>
        <% end %>
      </ul>
    </li>
  <% end %>
  </ul>
<% end %>

<%=
  render(partial: "shared/footer", locals: {
    items: [
      {
        title: I18n.t("myplaceonline.general.back"),
        link: controller.index_path,
        icon: "back"
      },
    ]
  })
%>
