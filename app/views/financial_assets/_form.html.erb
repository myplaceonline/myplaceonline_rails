<%=
  input_field(
    form: f,
    type: Myp::FIELD_TEXT,
    name: :asset_name,
    value: obj.asset_name,
    placeholder: "myplaceonline.financial_assets.asset_name",
    autofocus: autofocus
  )
%>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_DECIMAL,
    name: :asset_value,
    value: obj.asset_value,
    placeholder: "myplaceonline.financial_assets.asset_value"
  )
%>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_TEXT,
    name: :asset_location,
    value: obj.asset_location,
    placeholder: "myplaceonline.financial_assets.asset_location",
    remote_autocomplete_model: obj.class,
    remote_autocomplete_all: true
  )
%>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_DATETIME,
    name: :asset_received,
    value: obj.asset_received,
    placeholder: "myplaceonline.financial_assets.asset_received"
  )
%>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_TEXT_AREA,
    name: :notes,
    value: obj.notes,
    placeholder: "myplaceonline.general.notes",
    collapsed: obj.notes.blank?,
    placeholder_prefix: Myp.instance_to_category_human_readable(obj).singularize,
  )
%>
<%=
  render partial: "myplaceonline/pictures_form", locals: {
    f: f,
    obj: obj,
    position_field: :position,
    pictures_field: :financial_asset_files,
    item_placeholder: "myplaceonline.identity_files.file",
    heading: "myplaceonline.identity_files.files",
    addbutton: "myplaceonline.identity_files.add_file",
    addbutton_multi: "myplaceonline.identity_files.add_files",
    deletebutton: "myplaceonline.identity_files.delete_file"
  }
%>
