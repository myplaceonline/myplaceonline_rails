<%=
  render partial: "myplaceonline/select_or_create", locals: {
    f: f,
    name: :location,
    existingobj: obj.location,
    heading: t("myplaceonline.picnic_locations.location"),
    objform: "locations/form",
    existingobjurl: "location_path",
    searchurl: "/locations.json?perpage=0",
    edit: edit,
    autofocus: autofocus,
    expanded_if_nil: true
  }
%>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_SELECT,
    name: :rating,
    value: obj.rating,
    placeholder: "myplaceonline.general.rating",
    select_options: Myp::RATINGS,
  )
%>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_BOOLEAN,
    name: :shadedareas,
    value: obj.shadedareas,
    placeholder: "myplaceonline.picnic_locations.shadedareas"
  )
%>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_BOOLEAN,
    name: :treeshade,
    value: obj.treeshade,
    placeholder: "myplaceonline.picnic_locations.treeshade"
  )
%>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_BOOLEAN,
    name: :coal_disposal,
    value: obj.coal_disposal,
    placeholder: "myplaceonline.picnic_locations.coal_disposal"
  )
%>
