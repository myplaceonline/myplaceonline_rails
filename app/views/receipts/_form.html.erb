<%= myp_text_field(f, :receipt_name, "myplaceonline.receipts.receipt_name", obj.receipt_name, autofocus) %>
<%= myp_datetime_field(f, :receipt_time, "myplaceonline.receipts.receipt_time", obj.receipt_time) %>
<%= myp_decimal_field(f, :amount, "myplaceonline.receipts.amount", obj.amount) %>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_TEXT_AREA,
    name: :notes,
    value: obj.notes,
    placeholder: "myplaceonline.general.notes",
    collapsed: obj.notes.blank?,
    placeholder_prefix: Myp.instance_to_category_human_readable(obj).singularize,
  )
%>
<%=
  render partial: "myplaceonline/pictures_form", locals: {
    f: f,
    obj: obj,
    pictures_field: :receipt_files
  }
%>
