<%=
  render(layout: "myplaceonline/childproperties", locals: {
    f: f,
    heading: t("myplaceonline.food_nutrition_informations.amounts"),
    childpropertiesname: :food_nutrition_information_amounts,
    childproperties: obj.food_nutrition_information_amounts,
    deletebutton: t("myplaceonline.food_nutrition_informations.delete_amount"),
    addbutton: t("myplaceonline.food_nutrition_informations.add_amount"),
    expanded: obj.food_nutrition_information_amounts.length > 0,
    formjson: [
      {
        type: :renderpartial,
        partial: "myplaceonline/select_or_create",
        heading: t("myplaceonline.food_nutrition_informations.amount"),
        objform: "food_nutrition_information_amounts/form",
        only_new: true,
        edit: false,
        autofocus: true
      }
    ]
  }) do |child_fields, childproperty|
%>
  <%= render partial: "food_nutrition_information_amounts/form", locals: { obj: childproperty || FoodNutritionInformationAmount.build, edit: edit, autofocus: false, f: child_fields } %>
<% end %>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_TEXT_AREA,
    name: :notes,
    value: obj.notes,
    placeholder: "myplaceonline.general.notes",
    collapsed: obj.notes.blank?,
    placeholder_prefix: I18n.t("myplaceonline.category.food_nutrition_informations").singularize,
  )
%>
<%=
  render partial: "myplaceonline/pictures_form", locals: {
    f: f,
    obj: obj,
    position_field: :position,
    pictures_field: :food_nutrition_information_files,
    item_placeholder: "myplaceonline.identity_files.file",
    heading: "myplaceonline.identity_files.files",
    addbutton: "myplaceonline.identity_files.add_file",
    addbutton_multi: "myplaceonline.identity_files.add_files",
    deletebutton: "myplaceonline.identity_files.delete_file"
  }
%>
