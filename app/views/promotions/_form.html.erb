<%= myp_text_field(f, :promotion_name, "myplaceonline.promotions.promotion_name", obj.promotion_name, autofocus) %>
<%= myp_date_field(f, :started, "myplaceonline.promotions.started", obj.started) %>
<%= myp_date_field(f, :expires, "myplaceonline.promotions.expires", obj.expires) %>
<%= myp_decimal_field(f, :promotion_amount, "myplaceonline.promotions.promotion_amount", obj.promotion_amount) %>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_TEXT_AREA,
    name: :notes,
    value: obj.notes,
    placeholder: "myplaceonline.general.notes",
    collapsed: obj.notes.blank?,
    placeholder_prefix: Myp.instance_to_category_human_readable(obj).singularize,
  )
%>
