<%=
  input_field(
    form: f,
    type: Myp::FIELD_TEXT,
    name: :present_name,
    value: obj.present_name,
    placeholder: "myplaceonline.presents.present_name",
    autofocus: autofocus
  )
%>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_DATE,
    name: :present_given,
    value: obj.present_given,
    placeholder: "myplaceonline.presents.present_given"
  )
%>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_DATE,
    name: :present_purchased,
    value: obj.present_purchased,
    placeholder: "myplaceonline.presents.present_purchased"
  )
%>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_DECIMAL,
    name: :present_amount,
    value: obj.present_amount,
    placeholder: "myplaceonline.presents.present_amount"
  )
%>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_TEXT_AREA,
    name: :notes,
    value: obj.notes,
    placeholder: "myplaceonline.general.notes",
    collapsed: obj.notes.blank?,
    placeholder_prefix: Myp.instance_to_category_human_readable(obj).singularize,
  )
%>
<%=
  render partial: "myplaceonline/select_or_create", locals: {
    f: f,
    name: :contact,
    existingobj: obj.contact,
    heading: t("myplaceonline.presents.contact"),
    objform: "contacts/form",
    existingobjurl: "contact_path",
    searchurl: "/contacts.json?perpage=0",
    edit: edit,
    autofocus: false
  }
%>
<%=
  render partial: "myplaceonline/pictures_form", locals: {
    f: f,
    obj: obj,
    position_field: :position,
    pictures_field: :present_files,
    item_placeholder: "myplaceonline.identity_files.file",
    heading: "myplaceonline.identity_files.files",
    addbutton: "myplaceonline.identity_files.add_file",
    addbutton_multi: "myplaceonline.identity_files.add_files",
    deletebutton: "myplaceonline.identity_files.delete_file"
  }
%>
