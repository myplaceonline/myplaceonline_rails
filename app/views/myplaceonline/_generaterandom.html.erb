<%# Logic duplicated in myplaceonline_final.js formAddItem %>
<div data-role="collapsible">
  <h3><%= heading %></h3>
  <p><a href="#" class="ui-btn" onclick="myplaceonline.getRemoteString(<%= destination %>, $(this).parents('div').first().find('.generate_password_length').val(), $(this).parents('div').first().find('.generate_password_option')); return false;"><%= button %></a></p>
  <div data-role="collapsible">
    <h3><%= t("myplaceonline.passwords.generate_options") %></h3>
    <p><%= myp_text_field_tag("max_password_length", lengthplaceholder, Setting.get_value_integer(category: Myp.categories[:passwords], name: PasswordsController::MAX_PASSWORD_LENGTH, default_value: Myp::DEFAULT_PASSWORD_LENGTH), false, "generate_password_length") %></p>
    <p><%= myp_check_box_tag("lowercase", "myplaceonline.passwords.generate_lowercase", Setting.get_value_boolean(category: controller.category, name: PasswordsController::USE_LOWERCASE, default_value: true), false, "generate_password_option") %></p>
    <p><%= myp_check_box_tag("uppercase", "myplaceonline.passwords.generate_uppercase", Setting.get_value_boolean(category: controller.category, name: PasswordsController::USE_UPPERCASE, default_value: true), false, "generate_password_option") %></p>
    <p><%= myp_check_box_tag("numbers", "myplaceonline.passwords.generate_numbers", Setting.get_value_boolean(category: controller.category, name: PasswordsController::USE_NUMBERS, default_value: true), false, "generate_password_option") %></p>
    <p><%= myp_check_box_tag("special", "myplaceonline.passwords.generate_special", Setting.get_value_boolean(category: controller.category, name: PasswordsController::USE_SPECIAL, default_value: true), false, "generate_password_option") %></p>
    <p><%= myp_check_box_tag("special_additional", "myplaceonline.passwords.generate_special_additional", Setting.get_value_boolean(category: controller.category, name: PasswordsController::USE_SPECIAL_ADDITIONAL, default_value: true), false, "generate_password_option") %></p>
  </div>
</div>
