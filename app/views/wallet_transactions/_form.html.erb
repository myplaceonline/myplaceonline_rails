  input_field(
    form: f,
    type: Myp::FIELD_DECIMAL,
    name: :transaction_amount,
    value: obj.transaction_amount,
    placeholder: "myplaceonline.wallet_transactions.transaction_amount",
    autofocus: autofocus
  )
%>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_DATETIME,
    name: :transaction_time,
    value: obj.transaction_time,
    placeholder: "myplaceonline.wallet_transactions.transaction_time"
  )
%>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_TEXT,
    name: :short_description,
    value: obj.short_description,
    placeholder: "myplaceonline.wallet_transactions.short_description"
  )
