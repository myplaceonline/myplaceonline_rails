<%=
  render partial: "myplaceonline/select_or_create", locals: {
    f: f,
    name: :contact,
    existingobj: obj.contact,
    heading: t("myplaceonline.business_cards.contact"),
    objform: "contacts/form",
    existingobjurl: "contact_path",
    searchurl: "/contacts.json?perpage=0",
    edit: edit,
    autofocus: autofocus,
    expanded_if_nil: true
  }
%>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_TEXT_AREA,
    name: :notes,
    value: obj.notes,
    placeholder: "myplaceonline.general.notes",
    collapsed: obj.notes.blank?,
    placeholder_prefix: Myp.instance_to_category_human_readable(obj).singularize,
  )
%>
<%=
  render partial: "myplaceonline/pictures_form", locals: {
    f: f,
    obj: obj,
    position_field: :position,
    pictures_field: :business_card_files,
    item_placeholder: "myplaceonline.business_cards.file",
    heading: "myplaceonline.business_cards.files",
    addbutton: "myplaceonline.business_cards.add_file",
    addbutton_multi: "myplaceonline.business_cards.add_files",
    deletebutton: "myplaceonline.business_cards.delete_file"
  }
%>
