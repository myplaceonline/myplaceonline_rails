<%=
  render partial: "myplaceonline/select_or_create", locals: {
    f: f,
    name: :location,
    existingobj: obj.location,
    heading: t("myplaceonline.gas_stations.location"),
    objform: "locations/form",
    existingobjurl: "location_path",
    searchurl: "/locations.json?perpage=0",
    edit: edit,
    autofocus: true,
    expanded_if_nil: true
  }
%>
<%= myp_check_box(f, :gas, "myplaceonline.gas_stations.gas") %>
<%= myp_check_box(f, :diesel, "myplaceonline.gas_stations.diesel") %>
<%= myp_check_box(f, :propane_fillup, "myplaceonline.gas_stations.propane_fillup") %>
<%= myp_check_box(f, :propane_replacement, "myplaceonline.gas_stations.propane_replacement") %>
<%= myp_check_box(f, :rv_dump_station, "myplaceonline.gas_stations.rv_dump_station") %>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_SELECT,
    name: :rating,
    value: obj.rating,
    placeholder: "myplaceonline.general.rating",
    select_options: Myp::RATINGS,
  )
%>
<%=
  input_field(
    form: f,
    type: Myp::FIELD_TEXT_AREA,
    name: :notes,
    value: obj.notes,
    placeholder: "myplaceonline.general.notes",
    collapsed: obj.notes.blank?,
    placeholder_prefix: Myp.instance_to_category_human_readable(obj).singularize,
  )
%>
